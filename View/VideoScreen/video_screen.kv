<VideoScreenView>:
    MDGridLayout:
        cols: 1
        MDTopAppBar:
            id: toolbar
            title: "Reproductor de Video"
            left_action_items: [["chevron-left", lambda x: root.back_to_menu()]]
            elevation: 0
        MDScrollView:
            MDGridLayout:
                cols: 1
                adaptive_height: True
                id: grid_layout
                MDFloatLayout:                    
                    size_hint_y: None
                    height: dp(100)
                    MDRaisedButton:
                        pos_hint: {'center_x': 0.5,'center_y': 0.5}
                        text: "Cargar Video"
                        on_release: root.cargar_video()
